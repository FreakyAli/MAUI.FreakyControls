<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.ScratchView.ScratchViewPage"
             xmlns:views="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:freakyControls="clr-namespace:Maui.FreakyControls.Effects;assembly=Maui.FreakyControls"
             Title="ScratchViewPage">
    <Grid
        BackgroundColor="White">
        <views:SKCanvasView 
        x:Name="canvasView" 
        PaintSurface="OnPaint" 
        EnableTouchEvents="True">
        </views:SKCanvasView>
        <Grid.Effects>
            <freakyControls:TouchEffect 
                x:Name="touchEffect"
                Capture="True"
                TouchAction="OnTouchEffectAction" />
        </Grid.Effects>
    </Grid>
</ContentPage>
