<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Samples.InputViews.InputViews"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:freakyControls="clr-namespace:Maui.FreakyControls;assembly=Maui.FreakyControls"
    xmlns:inputViews="clr-namespace:Samples.InputViews"
    Title="InputViews"
    x:DataType="inputViews:InputViewModel">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">
            <freakyControls:FreakyButton
                Animation="FadeAndScale"
                BackgroundColor="{StaticResource Primary}"
                BorderColor="Black"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                BusyColor="White"
                IconSize="30"
                IsBusy="{Binding IsBusy}"
                Command="{Binding OnButtonClickedCommand}"
                Text="A button I suppose"
                TextColor="White">
                <freakyControls:FreakyButton.TrailingIcon>
                    <Image Source="calendar.png" />
                </freakyControls:FreakyButton.TrailingIcon>
            </freakyControls:FreakyButton>

            <Label Text="Freaky Entry below: " TextColor="Black" />
            <Border>
                <freakyControls:FreakyEntry
                    AllowCopyPaste="False"
                    FontSize="Large"
                    ImageAlignment="Left"
                    ImageCommand="{Binding ImageWasTappedCommand}"
                    ImageHeight="{OnPlatform 25,
                                             iOS=25,
                                             Android=40}"
                    ImagePadding="10"
                    ImageSource="calendar"
                    ImageWidth="{OnPlatform 25,
                                            iOS=25,
                                            Android=40}"
                    Keyboard="Chat"
                    Placeholder="This is a freaky entry with image"
                    TextColor="Purple" />
            </Border>

            <Label Text="Freaky Entry below: " TextColor="Black" />
            <Border>
                <freakyControls:FreakyEntry
                    AllowCopyPaste="False"
                    FontSize="Large"
                    ImageAlignment="Right"
                    ImageCommand="{Binding ImageWasTappedCommand}"
                    ImageHeight="{OnPlatform 25,
                                             iOS=25,
                                             Android=40}"
                    ImagePadding="10"
                    ImageSource="calendar"
                    ImageWidth="{OnPlatform 25,
                                            iOS=25,
                                            Android=40}"
                    Keyboard="Chat"
                    Placeholder="This is a freaky entry with image"
                    TextColor="Purple" />
            </Border>

            <Label Text="Freaky Editor below: " TextColor="Black" />
            <Border>
                <freakyControls:FreakyEditor
                    AllowCopyPaste="False"
                    BackgroundColor="White"
                    FontSize="Large"
                    HeightRequest="200"
                    Keyboard="Chat"
                    Placeholder="This is a freaky editor"
                    TextColor="Purple" />
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>