        <HorizontalStackLayout Spacing="10">
            <Label Text="Switch" VerticalTextAlignment="Center"/>
            <freakyControls:FreakySwitch />
        </HorizontalStackLayout>
         <HorizontalStackLayout Spacing="10">
            <Label Text="Switch" VerticalTextAlignment="Center"/>
            <freakyControls:FreakySwitch />
        </HorizontalStackLayout>
         <HorizontalStackLayout Spacing="10">
            <Label Text="Switch" VerticalTextAlignment="Center"/>
            <freakyControls:FreakySwitch />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
