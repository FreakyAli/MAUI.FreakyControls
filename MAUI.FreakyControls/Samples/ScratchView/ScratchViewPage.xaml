<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.ScratchView.ScratchViewPage"
             xmlns:freakyControls="clr-namespace:Maui.FreakyControls;assembly=Maui.FreakyControls"
             Title="ScratchViewPage">
    <Grid>
        <freakyControls:FreakyScratchView
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    HeightRequest="200"
                    WidthRequest="200"
                    FrontImageSource="Front.jpg"
                    BackImageSource="Back.jpg"
                    StrokeWidth="100"/>
    </Grid>
</ContentPage>
