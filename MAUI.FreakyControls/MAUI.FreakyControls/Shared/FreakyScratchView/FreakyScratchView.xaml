<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:effects="clr-namespace:Maui.FreakyControls.Effects"
             x:Name="this"
             x:Class="Maui.FreakyControls.FreakyScratchView">
    <Grid>
        <Image
            Grid.Row="0"
            x:Name="BackImage"
            Grid.Column="0"
            Source="{Binding Source={x:Reference this}, Path=BackImageSource}"
            Aspect="AspectFit"/>

        <skia:SKCanvasView
            x:Name="canvasView"
            BackgroundColor="Aquamarine"
            VerticalOptions="Fill"
            Grid.Row="0"
            Grid.Column="0" 
            PaintSurface="CanvasView_PaintSurface"/>
        <Grid.Effects>
            <effects:TouchEffect Capture="True"
                            TouchAction="TouchEffect_TouchAction" />
        </Grid.Effects>
    </Grid>
</ContentView>
