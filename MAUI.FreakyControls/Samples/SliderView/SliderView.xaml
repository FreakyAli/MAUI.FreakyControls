<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Samples.SliderView.SliderView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:freakyControls="clr-namespace:Maui.FreakyControls;assembly=Maui.FreakyControls"
    xmlns:sliderview="clr-namespace:Samples.SliderView"
    Title="SliderView"
    x:DataType="sliderview:SliderViewModel">
    <VerticalStackLayout>

        <Label Text="{Binding Label1}" />

        <freakyControls:MaterialSlider
            MaximumValue="1000"
            MinimumIcon="calendar.png"
            MaximumIcon="calendar.png"
            MinimumValue="0"
            Value="{Binding Label1, Mode=TwoWay}" />

        <Label />
        <freakyControls:FreakySlider />

        <Label />
        <freakyControls:FreakySlider />

        <Label />
        <freakyControls:FreakySlider />

        <Label />
        <freakyControls:FreakySlider />

        <Label />
        <freakyControls:FreakySlider />

        <Label />
        <freakyControls:FreakySlider />


    </VerticalStackLayout>
</ContentPage>
