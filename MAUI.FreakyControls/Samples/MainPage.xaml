<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:freakyControls="clr-namespace:MAUI.FreakyControls;assembly=MAUI.FreakyControls"
             x:Class="Samples.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                TextColor="Black" 
                Text="Freaky Editor below: " />

            <freakyControls:FreakyEditor
               Placeholder="This is a freaky editor"
               TextColor="Purple"
               HeightRequest="250"
               FontSize="Large"
               Keyboard="Chat"/>

            <Label
                TextColor="Black" 
                Text="Freaky Entry below: " />

            <freakyControls:FreakyEntry
               Placeholder="This is a freaky entry"
               TextColor="Purple"
               FontSize="Large"
               Keyboard="Chat"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

