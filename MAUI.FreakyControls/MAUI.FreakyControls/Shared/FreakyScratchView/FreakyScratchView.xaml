<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Maui.FreakyControls"
             xmlns:effects="clr-namespace:Maui.FreakyControls.Effects"
             x:Class="Maui.FreakyControls.FreakyScratchView">
    <Grid>
        <Image Grid.Row="0"
                   x:Name="BackImage"
                   Grid.Column="0"
                   Aspect="Fill"/>

        <controls:FreakySKCanvasView x:Name="canvasView"
                               VerticalOptions="Fill"
                               Grid.Row="0"
                               Grid.Column="0" 
                               PaintSurface="CanvasView_PaintSurface"/>
        <Grid.Effects>
            <effects:TouchEffect Capture="True"
                            TouchAction="TouchEffect_TouchAction" />
        </Grid.Effects>
    </Grid>
</ContentView>
