<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:freakyControls="clr-namespace:MAUI.FreakyControls;assembly=MAUI.FreakyControls"
             xmlns:extensions="clr-namespace:MAUI.FreakyControls.Extensions;assembly=MAUI.FreakyControls"
             xmlns:staticFiles="clr-namespace:Samples.Resources.Images"
             x:Class="Samples.MainPage">
    <ScrollView >
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                TextColor="Black" 
                Text="Freaky Editor below: " />
            <Border
                Stroke="Black"
                StrokeThickness="2"
                Padding="10"
                HorizontalOptions="Fill">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <freakyControls:FreakyEditor
               Placeholder="This is a freaky editor"
               TextColor="Purple"
               BackgroundColor="White"
               HeightRequest="250"
               FontSize="Large"
               Keyboard="Chat"/>
            </Border>

            <Label
                TextColor="Black" 
                Text="Freaky Entry below: " />
            <Border
                Stroke="Black"
                Padding="10"
                StrokeThickness="2"
                HorizontalOptions="Fill">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <freakyControls:FreakyEntry
               Placeholder="This is a freaky entry"
               TextColor="Purple"
               ImageAlignment="Left"
               ImageSource="calendar"
               FontSize="Large"
               Keyboard="Chat"/>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

