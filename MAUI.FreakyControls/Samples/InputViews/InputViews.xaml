<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:freakyControls="clr-namespace:Maui.FreakyControls;assembly=Maui.FreakyControls"
             xmlns:inputViews="clr-namespace:Samples.InputViews"
             x:Class="Samples.InputViews.InputViews"
             x:DataType="inputViews:InputViewModel"
             Title="InputViews">
    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="15">

            <freakyControls:FreakyColorPicker
	            x:Name="ColorPicker"
	            ColorFlowDirection="Horizontal"
	            ColorSpectrumStyle="TintToHueToShadeStyle"
	            HeightRequest="200"
	            HorizontalOptions="FillAndExpand"
	            PickedColorChanged="ColorPicker_PickedColorChanged"
	            PointerRingBorderUnits="0.3"
	            PointerRingDiameterUnits="0.7"
	            PointerRingPositionXUnits="0.6"
	            PointerRingPositionYUnits="0.6">
                <freakyControls:FreakyColorPicker.BaseColorList>
                    <x:Array Type="{x:Type x:String}">
                        <!--  Red  -->
                        <x:String>#ff0000</x:String>
                        <!--  Yellow  -->
                        <x:String>#ffff00</x:String>
                        <!--  Green (Lime)  -->
                        <x:String>#00ff00</x:String>
                        <!--  Aqua  -->
                        <x:String>#00ffff</x:String>
                        <!--  Blue  -->
                        <x:String>#0000ff</x:String>
                        <!--  Fuchsia  -->
                        <x:String>#ff00ff</x:String>
                        <!--  Red  -->
                        <x:String>#ff0000</x:String>
                    </x:Array>
                </freakyControls:FreakyColorPicker.BaseColorList>
            </freakyControls:FreakyColorPicker>

            <Label
                TextColor="Black" 
                Text="Freaky Entry below: " />
            <Border>
                <freakyControls:FreakyEntry
               Placeholder="This is a freaky entry with image"
               TextColor="Purple"
               FontSize="Large"
               ImagePadding="10"
               AllowCopyPaste="False"
               ImageCommand="{Binding ImageWasTappedCommand}"
               ImageHeight="{OnPlatform 25, iOS=25, Android=40}"
               ImageWidth="{OnPlatform 25, iOS=25, Android=40}"
               ImageAlignment="Left"
               ImageSource="calendar"
               Keyboard="Chat"/>
            </Border>

            <Label
                TextColor="Black" 
                Text="Freaky Entry below: " />
            <Border>
                <freakyControls:FreakyEntry
               Placeholder="This is a freaky entry with image"
               TextColor="Purple"
               FontSize="Large"
               ImagePadding="10"
               AllowCopyPaste="False"
               ImageCommand="{Binding ImageWasTappedCommand}"
               ImageHeight="{OnPlatform 25, iOS=25, Android=40}"
               ImageWidth="{OnPlatform 25, iOS=25, Android=40}"
               ImageAlignment="Right"
               ImageSource="calendar"
               Keyboard="Chat"/>
            </Border>

            <Label
                TextColor="Black" 
                Text="Freaky Editor below: " />
            <Border>
                <freakyControls:FreakyEditor
               Placeholder="This is a freaky editor"
               TextColor="Purple"
               AllowCopyPaste="False"
               BackgroundColor="White"
               HeightRequest="200"
               FontSize="Large"
               Keyboard="Chat"/>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>